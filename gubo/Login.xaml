<Window x:Class="KretaKlon.gubo.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KretaKlon.gubo"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid Background="#424242">
        <StackPanel>
            <Label HorizontalAlignment="Center" Foreground="White" FontSize="18" FontWeight="Bold">Kérem írja be a tanuló jelszavát:</Label>
            <TextBox x:Name="textBox" Width="200"></TextBox>
            <Button Content="Mégse" Width="200" HorizontalAlignment="Left" Click="Button_Click_1"></Button>
            <Button Content="Ok" Width="200" Click="Button_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
